    link: "#",
    github: "https://github.com/yourusername/project",
  },
  {
    title: "Felt Pressure Washing",
    description: "Full-service exterior cleaning company. Managing operations, marketing, customer relationships, and business growth.",
    tags: ["Business Operations", "Marketing", "Customer Service"],
    link: "https://feltpressurewashing.com",
    featured: true,
  },
  {
    title: "Real Estate Market Analysis",
