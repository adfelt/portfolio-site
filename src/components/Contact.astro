      </div>
    </div>
  </div>
</section>

<style>
  .contact {
    background: linear-gradient(135deg, var(--primary-navy) 0%, #0d1f35 100%);
    color: white;
  }

  .contact-content {
    display: grid;
    grid-template-columns: 1.5fr 1fr;
    gap: 4rem;
  }

  .contact-info h2 {
    color: white;
    margin-bottom: 1rem;
  }

  .contact-description {
    font-size: 1.125rem;
    color: var(--neutral-light);
    margin-bottom: 3rem;
    line-height: 1.6;
  }

  .contact-methods {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-method {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    padding: 1.5rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 12px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    transition: all var(--transition-normal);
    color: white;
  }

  .contact-method:hover {
    background: rgba(255, 255, 255, 0.1);
    transform: translateX(8px);
    border-color: var(--accent-coral);
  }

  .contact-method .icon {
    color: var(--accent-coral);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .contact-method h4 {
    color: white;
    font-size: 1rem;
    margin-bottom: 0.25rem;
  }

  .contact-method p {
    color: var(--neutral-light);
    font-size: 0.9rem;
  }

  .contact-card {
    background: rgba(255, 255, 255, 0.05);
    padding: 2rem;
    border-radius: 16px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    height: fit-content;
  }

  .contact-card h3 {
    color: white;
    margin-bottom: 1.5rem;
  }

  .quick-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .quick-link {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 8px;
    color: white;
    transition: all var(--transition-fast);
  }

  .quick-link:hover {
    background: rgba(255, 87, 87, 0.2);
    transform: translateX(4px);
  }

  .quick-link .arrow {
    color: var(--accent-coral);
    transition: transform var(--transition-fast);
  }

  .quick-link:hover .arrow {
    transform: translateX(4px);
  }

  @media (max-width: 968px) {
    .contact-content {
      grid-template-columns: 1fr;
      gap: 3rem;
    }
  }
</style>
