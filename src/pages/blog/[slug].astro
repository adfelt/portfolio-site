---
import { getCollection, render } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

export async function getStaticPaths() {
  const posts = await getCollection('blog');
  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

const { post } = Astro.props;
const { Content } = await render(post);
---

<Layout title={`${post.data.title} - Andrew Felt`}>
  <Header />
  <main>
    <article class="blog-post">
      <div class="container">
        <a href="/blog" class="back-link">← Back to Writing</a>
        <header class="post-header">
          <time class="post-date">
            {new Date(post.data.date).toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' })}
          </time>
          <h1>{post.data.title}</h1>
          <p class="post-excerpt">{post.data.excerpt}</p>
        </header>
        <div class="post-body">
          <Content />
        </div>
        <div class="post-footer">
          <a href="/blog" class="back-link">← Back to Writing</a>
        </div>
      </div>
    </article>
  </main>
  <Footer />
</Layout>

<style>
  .blog-post {
    padding: 3rem 0 6rem;
  }

  .back-link {
    display: inline-flex;
    align-items: center;
    gap: 0.375rem;
    color: var(--text-medium);
    font-size: 0.9rem;
    font-weight: 500;
    margin-bottom: 2.5rem;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--accent-coral);
  }

  /* Post header */
  .post-header {
    max-width: 680px;
    margin: 0 auto 3rem;
    padding-bottom: 2.5rem;
    border-bottom: 1px solid var(--neutral-light);
  }

  .post-date {
    display: inline-block;
    font-size: 0.8rem;
    font-weight: 700;
    color: var(--accent-coral);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
  }

  .post-header h1 {
    font-size: 2.75rem;
    line-height: 1.15;
    color: var(--primary-navy);
    margin-bottom: 1.25rem;
    letter-spacing: -0.02em;
  }

  .post-excerpt {
    font-size: 1.2rem;
    color: var(--text-medium);
    line-height: 1.65;
    font-style: italic;
  }

  /* Prose body */
  .post-body {
    max-width: 680px;
    margin: 0 auto;
    font-size: 1.0625rem;
    line-height: 1.85;
    color: var(--text-dark);
  }

  /* Lead paragraph — slightly larger, muted */
  .post-body > p:first-child {
    font-size: 1.15rem;
    color: var(--text-medium);
    line-height: 1.75;
  }

  .post-body p {
    margin-bottom: 1.5rem;
  }

  /* Headings */
  .post-body h2 {
    font-size: 1.5rem;
    color: var(--primary-navy);
    margin: 3rem 0 0.875rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--neutral-light);
    letter-spacing: -0.01em;
    line-height: 1.3;
  }

  .post-body h3 {
    font-size: 1.175rem;
    color: var(--primary-navy);
    margin: 2.25rem 0 0.75rem;
    font-weight: 700;
    line-height: 1.3;
  }

  /* Lists */
  .post-body ul,
  .post-body ol {
    margin: 0.25rem 0 1.75rem 0;
    padding-left: 1.75rem;
  }

  .post-body li {
    margin-bottom: 0.625rem;
    padding-left: 0.25rem;
  }

  .post-body ul li::marker {
    color: var(--accent-coral);
  }

  .post-body ol li::marker {
    color: var(--accent-coral);
    font-weight: 700;
  }

  /* Blockquote */
  .post-body blockquote {
    border-left: 3px solid var(--accent-coral);
    padding: 0.25rem 0 0.25rem 1.5rem;
    margin: 2rem 0;
    color: var(--text-medium);
    font-style: italic;
    font-size: 1.1rem;
    line-height: 1.7;
  }

  .post-body blockquote p {
    margin-bottom: 0;
  }

  /* Inline code */
  .post-body code {
    background: var(--neutral-light);
    color: var(--primary-navy);
    padding: 0.15em 0.45em;
    border-radius: 4px;
    font-size: 0.875em;
    font-family: 'SF Mono', 'Fira Code', 'Fira Mono', 'Consolas', monospace;
  }

  /* Code blocks */
  .post-body pre {
    background: var(--primary-navy);
    border-radius: 8px;
    padding: 1.5rem;
    overflow-x: auto;
    margin: 1.5rem 0 2rem;
  }

  .post-body pre code {
    background: none;
    color: #e8edf2;
    padding: 0;
    font-size: 0.875rem;
    line-height: 1.7;
    border-radius: 0;
  }

  /* Bold */
  .post-body strong {
    color: var(--primary-navy);
    font-weight: 700;
  }

  /* Links */
  .post-body a {
    color: var(--accent-coral);
    font-weight: 500;
    text-decoration: underline;
    text-decoration-color: transparent;
    text-underline-offset: 3px;
    transition: text-decoration-color var(--transition-fast), color var(--transition-fast);
  }

  .post-body a:hover {
    color: var(--accent-gold);
    text-decoration-color: var(--accent-gold);
  }

  /* Divider — ornamental dots */
  .post-body hr {
    border: none;
    text-align: center;
    margin: 3rem 0;
    overflow: visible;
  }

  .post-body hr::after {
    content: '· · ·';
    display: inline-block;
    font-size: 1.25rem;
    letter-spacing: 0.5em;
    color: var(--text-light);
  }

  /* Post footer */
  .post-footer {
    max-width: 680px;
    margin: 3rem auto 0;
    padding-top: 2rem;
    border-top: 1px solid var(--neutral-light);
  }

  @media (max-width: 640px) {
    .blog-post {
      padding: 2rem 0 4rem;
    }

    .post-header h1 {
      font-size: 2rem;
    }

    .post-body {
      font-size: 1rem;
    }

    .post-body h2 {
      font-size: 1.35rem;
    }

    .post-body h3 {
      font-size: 1.125rem;
    }

    .post-body > p:first-child {
      font-size: 1.0625rem;
    }
  }
</style>
